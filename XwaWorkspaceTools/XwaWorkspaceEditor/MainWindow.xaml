<Window x:Class="XwaWorkspaceEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XwaWorkspaceEditor"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:ws="clr-namespace:JeremyAnsel.Xwa.Workspace;assembly=JeremyAnsel.Xwa.Workspace"
        mc:Ignorable="d"
        Title="Xwa Workspace Editor"
        Width="1200"
        Height="700"
        UseLayoutRounding="True"
        x:Name="window">
    <Window.Resources>
        <local:ViewModel x:Key="ViewModel" />
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError"
                         Value="True">
                    <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource ViewModel}" />
    </Window.DataContext>
    <DockPanel>
        <ToolBarPanel DockPanel.Dock="Top">
            <ToolBar ToolBarTray.IsLocked="True">
                <Button x:Name="openButton"
                        Content="Open..."
                        Click="OpenButton_Click" />
                <Button x:Name="saveButton"
                        Content="Save"
                        Click="SaveButton_Click" />
            </ToolBar>
        </ToolBarPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding WorkingDirectory}" />
        </StatusBar>
        <TabControl x:Name="sectionsTabControl"
                    SelectionChanged="SectionsTabControl_SelectionChanged">
            <TabItem Header="Specs">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"
                                          MinWidth="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*"
                                          MinWidth="100" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1"
                                  Width="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Stretch" />
                    <ListView x:Name="specsListView"
                              Grid.Column="0"
                              ItemsSource="{Binding ShipLists}"
                              IsSynchronizedWithCurrentItem="True"
                              SelectionMode="Single"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID"
                                                Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <Binding>
                                                        <Binding.Converter>
                                                            <local:ItemIndexConverter DataContext="{Binding Source={x:Reference specsListView}, Path=ItemsSource}"
                                                                                      StartIndex="1" />
                                                        </Binding.Converter>
                                                    </Binding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="200"
                                                DisplayMemberBinding="{Binding CraftName}"
                                                Header="Craft Name" />
                                <GridViewColumn Width="100"
                                                DisplayMemberBinding="{Binding CraftType}"
                                                Header="Craft Type" />
                                <GridViewColumn Width="80"
                                                DisplayMemberBinding="{Binding Flyable}"
                                                Header="Flyable" />
                                <GridViewColumn Width="80"
                                                DisplayMemberBinding="{Binding Known}"
                                                Header="Known" />
                                <GridViewColumn Width="80"
                                                DisplayMemberBinding="{Binding Skirmish}"
                                                Header="Skirmish" />
                                <GridViewColumn Width="150"
                                                DisplayMemberBinding="{Binding MapIconRect}"
                                                Header="Map Icon Rect" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <DockPanel Grid.Column="2">
                        <ToolBarPanel DockPanel.Dock="Top">
                            <ToolBar ToolBarTray.IsLocked="True">
                                <Button Content="Add New"
                                        Command="{Binding AddNewShipListEntryCommand}"
                                        CommandParameter="{x:Reference specsListView}" />
                                <Separator />
                                <Button Content="Clear"
                                        Command="{Binding ClearShipListEntryCommand}"
                                        CommandParameter="{x:Reference specsListView}" />
                                <Separator />
                                <Button Content="Remove"
                                        Command="{Binding RemoveShipListEntryCommand}"
                                        CommandParameter="{x:Reference specsListView}" />
                            </ToolBar>
                        </ToolBarPanel>
                        <ScrollViewer>
                            <StackPanel DataContext="{Binding ShipLists/}">
                                <TextBlock Text="Craft Name:" />
                                <TextBox Text="{Binding CraftName, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Craft Type:" />
                                <local:EnumComboBox EnumType="{x:Type ws:XwaShipListCraftType}"
                                                    Text="{Binding CraftType}" />
                                <TextBlock />
                                <TextBlock Text="Flyable:" />
                                <local:EnumComboBox EnumType="{x:Type ws:XwaShipListFlyableOption}"
                                                    Text="{Binding Flyable}" />
                                <TextBlock />
                                <TextBlock Text="Known:" />
                                <local:EnumComboBox EnumType="{x:Type ws:XwaShipListKnownOption}"
                                                    Text="{Binding Known}" />
                                <TextBlock />
                                <TextBlock Text="Skirmish:" />
                                <local:EnumComboBox EnumType="{x:Type ws:XwaShipListSkirmishOption}"
                                                    SelectedItem="{Binding Skirmish}" />
                                <TextBlock />
                                <TextBlock Text="Map Icon Rect:" />
                                <TextBlock Text="{Binding MapIconRect}" />
                                <UniformGrid Rows="1">
                                    <Image Source="{Binding MapIcon[5]}"
                                           MaxWidth="50"
                                           MaxHeight="50"
                                           Margin="2" />
                                    <Image Source="{Binding MapIcon[0]}"
                                           MaxWidth="50"
                                           MaxHeight="50"
                                           Margin="2" />
                                    <Image Source="{Binding MapIcon[1]}"
                                           MaxWidth="50"
                                           MaxHeight="50"
                                           Margin="2" />
                                    <Image Source="{Binding MapIcon[2]}"
                                           MaxWidth="50"
                                           MaxHeight="50"
                                           Margin="2" />
                                    <Image Source="{Binding MapIcon[3]}"
                                           MaxWidth="50"
                                           MaxHeight="50"
                                           Margin="2" />
                                    <Image Source="{Binding MapIcon[4]}"
                                           MaxWidth="50"
                                           MaxHeight="50"
                                           Margin="2" />
                                </UniformGrid>
                                <TextBlock />
                                <TextBlock Text="Map Icon Rect Left:" />
                                <TextBox Text="{Binding MapIconRectLeft, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="Map Icon Rect Top:" />
                                <TextBox Text="{Binding MapIconRectTop, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="Map Icon Rect Right:" />
                                <TextBox Text="{Binding MapIconRectRight, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="Map Icon Rect Bottom:" />
                                <TextBox Text="{Binding MapIconRectBottom, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Desc">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"
                                          MinWidth="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*"
                                          MinWidth="100" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1"
                                  Width="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Stretch" />
                    <ListView x:Name="descListView"
                              Grid.Column="0"
                              ItemsSource="{Binding SpecDescs}"
                              IsSynchronizedWithCurrentItem="True"
                              SelectionMode="Single"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID"
                                                Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <Binding>
                                                        <Binding.Converter>
                                                            <local:ItemIndexConverter DataContext="{Binding Source={x:Reference descListView}, Path=ItemsSource}"
                                                                                      StartIndex="1" />
                                                        </Binding.Converter>
                                                    </Binding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="250"
                                                DisplayMemberBinding="{Binding CraftLongName}"
                                                Header="Craft Long Name" />
                                <GridViewColumn Width="100"
                                                DisplayMemberBinding="{Binding CraftAbbreviation}"
                                                Header="Craft Abbreviation" />
                                <GridViewColumn Width="200"
                                                DisplayMemberBinding="{Binding Manufacturer}"
                                                Header="Manufacturer" />
                                <GridViewColumn Width="100"
                                                DisplayMemberBinding="{Binding Side}"
                                                Header="Side" />
                                <GridViewColumn Width="150"
                                                Header="Crew">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Crew}"
                                                       TextWrapping="Wrap" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="500"
                                                Header="Description">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Description}"
                                                       TextWrapping="Wrap" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <DockPanel Grid.Column="2">
                        <ToolBarPanel DockPanel.Dock="Top">
                            <ToolBar ToolBarTray.IsLocked="True">
                                <Button Content="Add New"
                                        Command="{Binding AddNewSpecDescEntryCommand}"
                                        CommandParameter="{x:Reference descListView}" />
                                <Separator />
                                <Button Content="Clear"
                                        Command="{Binding ClearSpecDescEntryCommand}"
                                        CommandParameter="{x:Reference descListView}" />
                                <Separator />
                                <Button Content="Remove"
                                        Command="{Binding RemoveSpecDescEntryCommand}"
                                        CommandParameter="{x:Reference descListView}" />
                            </ToolBar>
                        </ToolBarPanel>
                        <ScrollViewer>
                            <StackPanel DataContext="{Binding SpecDescs/}">
                                <TextBlock Text="Craft Long Name:" />
                                <TextBox Text="{Binding CraftLongName, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Craft Abbreviation:" />
                                <TextBlock Text="{Binding CraftAbbreviation}"
                                           TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Manufacturer:" />
                                <TextBox Text="{Binding Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Side:" />
                                <TextBox Text="{Binding Side, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Crew:" />
                                <TextBox Text="{Binding Crew, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Description:" />
                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Craft Strings">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"
                                          MinWidth="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*"
                                          MinWidth="100" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1"
                                  Width="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Stretch" />
                    <ListView x:Name="craftStringsListView"
                              Grid.Column="0"
                              ItemsSource="{Binding CraftStrings}"
                              IsSynchronizedWithCurrentItem="True"
                              SelectionMode="Single"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID"
                                                Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <Binding>
                                                        <Binding.Converter>
                                                            <local:ItemIndexConverter DataContext="{Binding Source={x:Reference craftStringsListView}, Path=ItemsSource}"
                                                                                      StartIndex="1" />
                                                        </Binding.Converter>
                                                    </Binding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="150"
                                                DisplayMemberBinding="{Binding GenderKey}"
                                                Header="Gender Key" />
                                <GridViewColumn Width="100"
                                                DisplayMemberBinding="{Binding CraftGender}"
                                                Header="Craft Gender" />
                                <GridViewColumn Width="200"
                                                DisplayMemberBinding="{Binding GenderCraftName}"
                                                Header="Gender Craft Name" />
                                <GridViewColumn Width="150"
                                                DisplayMemberBinding="{Binding PluralNameKey}"
                                                Header="Plural Name Key" />
                                <GridViewColumn Width="200"
                                                DisplayMemberBinding="{Binding CraftPluralName}"
                                                Header="Craft Plural Name" />
                                <GridViewColumn Width="150"
                                                DisplayMemberBinding="{Binding ShortNameKey}"
                                                Header="Short Name Key" />
                                <GridViewColumn Width="100"
                                                DisplayMemberBinding="{Binding CraftShortName}"
                                                Header="Craft Short Name" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <DockPanel Grid.Column="2">
                        <ToolBarPanel DockPanel.Dock="Top">
                            <ToolBar ToolBarTray.IsLocked="True">
                                <Button Content="Clear"
                                        Command="{Binding ClearCraftStringsEntryCommand}"
                                        CommandParameter="{x:Reference craftStringsListView}" />
                            </ToolBar>
                        </ToolBarPanel>
                        <ScrollViewer>
                            <StackPanel DataContext="{Binding CraftStrings/}">
                                <TextBlock Text="Gender Key:" />
                                <TextBox Text="{Binding GenderKey, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Craft Gender:" />
                                <local:EnumComboBox EnumType="{x:Type ws:XwaCraftGender}"
                                                    Text="{Binding CraftGender}" />
                                <TextBlock />
                                <TextBlock Text="Gender Craft Name:" />
                                <TextBox Text="{Binding GenderCraftName, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Plural Name Key:" />
                                <TextBox Text="{Binding PluralNameKey, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Craft Plural Name:" />
                                <TextBox Text="{Binding CraftPluralName, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Short Name Key:" />
                                <TextBox Text="{Binding ShortNameKey, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Craft Short Name:" />
                                <TextBox Text="{Binding CraftShortName, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Species">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"
                                          MinWidth="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*"
                                          MinWidth="100" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1"
                                  Width="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Stretch" />
                    <ListView x:Name="speciesListView"
                              ItemsSource="{Binding Species}"
                              IsSynchronizedWithCurrentItem="True"
                              SelectionMode="Single"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="ID"
                                                    Width="50">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <Binding>
                                                            <Binding.Converter>
                                                                <local:ItemIndexConverter DataContext="{Binding Source={x:Reference speciesListView}, Path=ItemsSource}"
                                                                                          StartIndex="0" />
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="50"
                                                    DisplayMemberBinding="{Binding Value}"
                                                    Header="Species" />
                                    <GridViewColumn Width="150"
                                                    Header="Name">
                                        <GridViewColumn.DisplayMemberBinding>
                                            <MultiBinding Converter="{x:Static local:ExeModelIndexConverter.Default}">
                                                <Binding Path="Value" />
                                                <Binding Path="DataContext.Objects"
                                                         ElementName="window" />
                                                <Binding Path="DataContext.FlightModelSpacecraft"
                                                         ElementName="window" />
                                                <Binding Path="DataContext.FlightModelEquipment"
                                                         ElementName="window" />
                                            </MultiBinding>
                                        </GridViewColumn.DisplayMemberBinding>
                                    </GridViewColumn>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <DockPanel Grid.Column="2">
                        <ToolBarPanel DockPanel.Dock="Top">
                            <ToolBar ToolBarTray.IsLocked="True">
                                <Button Content="Clear"
                                        Command="{Binding ClearSpeciesEntryCommand}"
                                        CommandParameter="{x:Reference speciesListView}" />
                            </ToolBar>
                        </ToolBarPanel>
                        <ScrollViewer>
                            <StackPanel DataContext="{Binding Species/}">
                                <TextBlock Text="Species:" />
                                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap" />
                                <TextBlock />
                                <TextBlock Text="Name:" />
                                <TextBlock TextWrapping="Wrap">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{x:Static local:ExeModelIndexConverter.Default}">
                                            <Binding Path="Value" />
                                            <Binding Path="DataContext.Objects"
                                                     ElementName="window" />
                                            <Binding Path="DataContext.FlightModelSpacecraft"
                                                     ElementName="window" />
                                            <Binding Path="DataContext.FlightModelEquipment"
                                                     ElementName="window" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Objects">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"
                                          MinWidth="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*"
                                          MinWidth="100" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1"
                                  Width="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Stretch" />
                    <ListView x:Name="objectsListView"
                              Grid.Column="0"
                              ItemsSource="{Binding Objects}"
                              IsSynchronizedWithCurrentItem="True"
                              SelectionMode="Single"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Width="150"
                                                    Header="Name">
                                        <GridViewColumn.DisplayMemberBinding>
                                            <MultiBinding Converter="{x:Static local:ExeObjectNameConverter.Default}">
                                                <Binding Path="DataIndex1" />
                                                <Binding Path="DataIndex2" />
                                                <Binding Path="DataContext.FlightModelSpacecraft"
                                                         ElementName="window" />
                                                <Binding Path="DataContext.FlightModelEquipment"
                                                         ElementName="window" />
                                            </MultiBinding>
                                        </GridViewColumn.DisplayMemberBinding>
                                    </GridViewColumn>
                                    <GridViewColumn Header="ID"
                                                    Width="50">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <Binding>
                                                            <Binding.Converter>
                                                                <local:ItemIndexConverter DataContext="{Binding Source={x:Reference objectsListView}, Path=ItemsSource}"
                                                                                          StartIndex="0" />
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding EnableOptions}"
                                                    Header="EnableOptions" />
                                    <GridViewColumn DisplayMemberBinding="{Binding RessourceOptions}"
                                                    Header="RessourceOptions" />
                                    <GridViewColumn DisplayMemberBinding="{Binding ObjectCategory, StringFormat=\{0:G\}}"
                                                    Header="ObjectCategory" />
                                    <GridViewColumn DisplayMemberBinding="{Binding ShipCategory, StringFormat=\{0:G\}}"
                                                    Header="ShipCategory" />
                                    <GridViewColumn DisplayMemberBinding="{Binding ObjectSize}"
                                                    Header="ObjectSize" />
                                    <GridViewColumn DisplayMemberBinding="{Binding GameOptions}"
                                                    Header="GameOptions" />
                                    <GridViewColumn DisplayMemberBinding="{Binding CraftIndex}"
                                                    Header="CraftIndex" />
                                    <GridViewColumn DisplayMemberBinding="{Binding DataIndex1}"
                                                    Header="DataIndex1" />
                                    <GridViewColumn DisplayMemberBinding="{Binding DataIndex2}"
                                                    Header="DataIndex2" />
                                    <GridViewColumn Header="ID"
                                                    Width="50">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <Binding>
                                                            <Binding.Converter>
                                                                <local:ItemIndexConverter DataContext="{Binding Source={x:Reference objectsListView}, Path=ItemsSource}"
                                                                                          StartIndex="0" />
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="150"
                                                    Header="Name">
                                        <GridViewColumn.DisplayMemberBinding>
                                            <MultiBinding Converter="{x:Static local:ExeObjectNameConverter.Default}">
                                                <Binding Path="DataIndex1" />
                                                <Binding Path="DataIndex2" />
                                                <Binding Path="DataContext.FlightModelSpacecraft"
                                                         ElementName="window" />
                                                <Binding Path="DataContext.FlightModelEquipment"
                                                         ElementName="window" />
                                            </MultiBinding>
                                        </GridViewColumn.DisplayMemberBinding>
                                    </GridViewColumn>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <DockPanel Grid.Column="2">
                        <ToolBarPanel DockPanel.Dock="Top">
                            <ToolBar ToolBarTray.IsLocked="True">
                                <Button Content="Clear"
                                        Command="{Binding ClearObjectEntryCommand}"
                                        CommandParameter="{x:Reference objectsListView}" />
                            </ToolBar>
                        </ToolBarPanel>
                        <ScrollViewer>
                            <StackPanel DataContext="{Binding Objects/}">
                                <TextBlock Text="Name:" />
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{x:Static local:ExeObjectNameConverter.Default}">
                                            <Binding Path="DataIndex1" />
                                            <Binding Path="DataIndex2" />
                                            <Binding Path="DataContext.FlightModelSpacecraft"
                                                     ElementName="window" />
                                            <Binding Path="DataContext.FlightModelEquipment"
                                                     ElementName="window" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock />
                                <TextBlock Text="Enable Options:" />
                                <local:EnumFlagsComboBox EnumType="{x:Type ws:XwaExeObjectEnableOptions}"
                                                         Text="{Binding EnableOptions}" />
                                <TextBlock />
                                <TextBlock Text="Ressource Options:" />
                                <local:EnumFlagsComboBox EnumType="{x:Type ws:XwaExeObjectRessourceOptions}"
                                                         Text="{Binding RessourceOptions}" />
                                <TextBlock />
                                <TextBlock Text="Object Category:" />
                                <local:EnumComboBox EnumType="{x:Type ws:XwaObjectCategory}"
                                                    Text="{Binding ObjectCategory}" />
                                <TextBlock />
                                <TextBlock Text="Ship Category:" />
                                <local:EnumComboBox EnumType="{x:Type ws:XwaShipCategory}"
                                                    Text="{Binding ShipCategory}" />
                                <TextBlock />
                                <TextBlock Text="Object Size:" />
                                <TextBox Text="{Binding ObjectSize, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock />
                                <TextBlock Text="Game Options:" />
                                <local:EnumFlagsComboBox EnumType="{x:Type ws:XwaExeObjectGameOptions}"
                                                         Text="{Binding GameOptions}" />
                                <TextBlock />
                                <TextBlock Text="Craft Index:" />
                                <TextBox Text="{Binding CraftIndex, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock />
                                <TextBlock Text="Data Index 1:" />
                                <TextBox Text="{Binding DataIndex1, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock />
                                <TextBlock Text="Data Index 2:" />
                                <TextBox Text="{Binding DataIndex2, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock />
                                <TextBlock Text="Name:" />
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{x:Static local:ExeObjectNameConverter.Default}">
                                            <Binding Path="DataIndex1" />
                                            <Binding Path="DataIndex2" />
                                            <Binding Path="DataContext.FlightModelSpacecraft"
                                                     ElementName="window" />
                                            <Binding Path="DataContext.FlightModelEquipment"
                                                     ElementName="window" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Crafts">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"
                                          MinWidth="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*"
                                          MinWidth="100" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1"
                                  Width="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Stretch" />
                    <ListView x:Name="craftsListView"
                              Grid.Column="0"
                              ItemsSource="{Binding Crafts}"
                              IsSynchronizedWithCurrentItem="True"
                              SelectionMode="Single"
                              VirtualizingStackPanel.IsVirtualizing="True"
